<% provide(:title, 'Assignments') %>
<h1>Assignments Listing</h1>

<div class="accordion" id="accordion1">
  	<div class="accordion-group">
    	<div class="accordion-heading">
      		<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapseOne">
        		Filter Assignments by Department
      		</a>
    	</div>
    	<div id="collapseOne" class="accordion-body collapse">
      		<div class="accordion-inner">
      			<h3> Not currently working </h3>
        		<% @departments.each do |dept| %>
        			<button class="btn btn-success"><%= dept.full_name %></button>
        		<% end %>
      		</div>
    	</div>
  	</div>
</div>

<%= will_paginate %>

<ul class="assignments">
	<% @assignments.each do |assignment| %>
		<div id=assignment>
			<h2><%= assignment.title %></h2>
				<div>
					<strong>Role description:</strong>
				</div>
				<div>
					<%= assignment.description %>
				</div>
				<p><strong>Department: </strong><%= assignment.department.full_name %> |<strong> Start date: </strong><%= assignment.start_date %> |<strong> Assignment length: </strong><%= assignment.length %> |</p>
				<%= link_to "See full details", assignment_path(assignment), class: "btn btn-primary" %>
		</div>
		</br>
	<% end %>
</ul>

<%= will_paginate %>