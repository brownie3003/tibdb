<% provide(:title, "Sign up") %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    	<%= render 'shared/user_error_messages' %>

      <%= f.label :first_name, "First name" %>
      <%= f.text_field :first_name %>
      
      <%= f.label :last_name, "Last name" %>
      <%= f.text_field :last_name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <!-- Not good from a security perspective to call Department Model -->
      <%= f.label :department, "Current Department" %>
      <%= f.select :department, Department.all.map(&:full_name) %> 

      <!-- Not sure about hard coding the roles -->
      <%= f.label :role, "Role" %>
      <%= f.select :role, ["Technology in Business Fast Streamer", "Manager"] %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

